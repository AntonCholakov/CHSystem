@model CHSystem.ViewModels.Groups.GroupsListVM

@using PagedList
@using PagedList.Mvc

@{
    ViewBag.Title = "List Groups";
}

<h2>List</h2>

<p>
    @Html.ActionLink("Create New", "Edit")
</p>

@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBoxFor(model => model.Search, new { @class = "form-control" })
        <input type="submit" value="Search" class="btn btn-primary" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @{
                Model.Props["sortOrder"] = Model.SortOrder == "name_asc" ? "name_desc" : "name_asc";
                @Html.ActionLink("Name", "List", "Groups", new RouteValueDictionary(Model.Props), null)
            }
        </th>
        <th></th>
    </tr>

@foreach (var group in Model.Groups) {
    <tr>
        <td>@Html.DisplayFor(modelItem => group.Name)</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = group.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = group.ID })
        </td>
    </tr>
}

</table>

Page @(Model.GroupsPagedList.PageCount < Model.GroupsPagedList.PageNumber ? 0 : Model.GroupsPagedList.PageNumber) of @Model.GroupsPagedList.PageCount

@Html.PagedListPager(Model.GroupsPagedList, page => Url.Action("List",
    new { page, sortOrder = Model.SortOrder, currentFilter = Model.Search }))